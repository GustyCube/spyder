{
  "dashboard": {
    "id": null,
    "uid": "spyder-main",
    "title": "SPYDER Probe Monitoring",
    "tags": ["spyder", "probe", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "type": "graph",
        "title": "Task Processing Rate",
        "targets": [
          {
            "expr": "rate(spyder_tasks_total[5m])",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "show": true},
          {"format": "short", "show": false}
        ]
      },
      {
        "id": 2,
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "type": "graph",
        "title": "Edge Discovery Rate",
        "targets": [
          {
            "expr": "rate(spyder_edges_total[5m])",
            "legendFormat": "{{type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "show": true},
          {"format": "short", "show": false}
        ]
      },
      {
        "id": 3,
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 8},
        "type": "graph",
        "title": "Active Workers",
        "targets": [
          {
            "expr": "spyder_active_workers",
            "legendFormat": "Workers",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "show": true},
          {"format": "short", "show": false}
        ]
      },
      {
        "id": 4,
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 8},
        "type": "graph",
        "title": "HTTP Request Latency (P95)",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(spyder_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "show": true},
          {"format": "short", "show": false}
        ]
      },
      {
        "id": 5,
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 8},
        "type": "stat",
        "title": "Error Rate",
        "targets": [
          {
            "expr": "rate(spyder_tasks_total{status=\"error\"}[5m]) / rate(spyder_tasks_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "calcs": ["lastNotNull"]
          },
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        }
      }
    ]
  }
}